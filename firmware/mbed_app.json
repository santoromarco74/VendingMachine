            "platform.stdio-convert-newlines": true
        },
        "NUCLEO_F401RE": {
            "target.device_has_add": ["LOWPOWERTIMER"],
            "target.components_add": ["BlueNRG_MS"],
            "idb0xa1.provide-default": true
